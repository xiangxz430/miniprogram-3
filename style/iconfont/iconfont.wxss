/* iconfont.wxss - 图标字体样式 */

.iconfont {
  font-size: 32rpx;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

/* 图标容器通用样式 */
.icon-container {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 10rpx;
}

