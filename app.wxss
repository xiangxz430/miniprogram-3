/* 通用文本样式 */
.text-primary {
  color: #6366f1;
}

.text-secondary {
  color: #64748b;
}

.text-danger {
  color: #ef4444;
}

.text-success {
  color: #10b981;
}

.text-warning {
  color: #f59e0b;
}

.text-info {
  color: #3b82f6;
} 