/* custom-tab-bar/index.wxss */
.tab-bar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 9999;
}

.tab-bar-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.98);
  backdrop-filter: blur(20px);
  box-shadow: 0 -2px 20px rgba(0, 0, 0, 0.08);
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}

.tab-bar {
  position: relative;
  display: flex;
  height: 120rpx;
  background: transparent;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  overflow: hidden;
  padding: 0 10rpx;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  border-radius: 16rpx;
  margin: 8rpx 2rpx;
}

.tab-bar-item.active {
  transform: translateY(-3rpx);
  background: rgba(59, 130, 246, 0.05);
}

.tab-bar-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 6rpx 2rpx;
  width: 100%;
}

.icon-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 2rpx;
  width: 46rpx;
  height: 46rpx;
}

.tab-icon {
  width: 46rpx;
  height: 46rpx;
  position: relative;
  transition: all 0.3s ease;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 首页图标 - 房子 */
.icon-home {
  position: relative;
}

.icon-home::before {
  content: '';
  position: absolute;
  width: 0;
  height: 0;
  border-left: 22rpx solid transparent;
  border-right: 22rpx solid transparent;
  border-bottom: 18rpx solid #94a3b8;
  top: 8rpx;
  left: 50%;
  transform: translateX(-50%);
}

.icon-home::after {
  content: '';
  position: absolute;
  width: 26rpx;
  height: 18rpx;
  background-color: #94a3b8;
  bottom: 8rpx;
  left: 50%;
  transform: translateX(-50%);
  border-radius: 0 0 3rpx 3rpx;
}

.icon-home-active::before {
  border-bottom-color: #3b82f6;
}

.icon-home-active::after {
  background-color: #3b82f6;
}

/* MBTI测试图标 - 四个方格 */
.icon-mbti {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-mbti:before {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  background-color: #94a3b8;
  border-radius: 3rpx;
  top: 6rpx;
  left: 6rpx;
}

.icon-mbti:after {
  content: '';
  position: absolute;
  width: 18rpx;
  height: 18rpx;
  background-color: #94a3b8;
  border-radius: 3rpx;
  top: 6rpx;
  right: 6rpx;
  box-shadow: 0 20rpx 0 #94a3b8, -20rpx 0 0 #94a3b8;
}

.icon-mbti-active:before,
.icon-mbti-active:after {
  background-color: #3b82f6;
}

.icon-mbti-active:after {
  box-shadow: 0 20rpx 0 #3b82f6, -20rpx 0 0 #3b82f6;
}

/* 心理健康测试图标 - 大脑/心理 */
.icon-mental {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
}

.icon-mental::before {
  content: '';
  position: absolute;
  width: 28rpx;
  height: 32rpx;
  background-color: #94a3b8;
  border-radius: 14rpx 14rpx 6rpx 6rpx;
  top: 6rpx;
  left: 50%;
  transform: translateX(-50%);
}

.icon-mental::after {
  content: '';
  position: absolute;
  width: 10rpx;
  height: 10rpx;
  background-color: #94a3b8;
  border-radius: 50%;
  top: 14rpx;
  left: 50%;
  transform: translateX(-50%);
  box-shadow: 
    -6rpx 2rpx 0 -1rpx #94a3b8,
    6rpx 2rpx 0 -1rpx #94a3b8,
    -3rpx 8rpx 0 -2rpx #94a3b8,
    3rpx 8rpx 0 -2rpx #94a3b8;
}

.icon-mental-active::before,
.icon-mental-active::after {
  background-color: #3b82f6;
}

.icon-mental-active::after {
  box-shadow: 
    -6rpx 2rpx 0 -1rpx #3b82f6,
    6rpx 2rpx 0 -1rpx #3b82f6,
    -3rpx 8rpx 0 -2rpx #3b82f6,
    3rpx 8rpx 0 -2rpx #3b82f6;
}

/* 我的图标 - 用户头像 */
.icon-user {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-user::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background-color: #94a3b8;
  position: absolute;
  top: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.icon-user::after {
  content: '';
  width: 26rpx;
  height: 16rpx;
  border-radius: 13rpx 13rpx 4rpx 4rpx;
  background-color: #94a3b8;
  position: absolute;
  bottom: 10rpx;
  left: 50%;
  transform: translateX(-50%);
}

.icon-user-active::before,
.icon-user-active::after {
  background-color: #3b82f6;
}

/* 激活状态通用样式 */
.tab-bar-item.active .tab-icon {
  transform: scale(1.1);
}

.tab-bar-item-circle {
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.08);
  z-index: -1;
  animation: pulse 2.5s infinite;
}

.tab-bar-item-text {
  font-size: 22rpx;
  line-height: 1.3;
  font-weight: 500;
  transition: all 0.3s ease;
  text-align: center;
  max-width: 140rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: keep-all;
  margin-top: 2rpx;
}

.tab-bar-item.active .tab-bar-item-text {
  font-weight: 600;
  transform: scale(1.05);
}

@keyframes pulse {
  0% {
    transform: scale(0.9);
    opacity: 0.6;
  }
  50% {
    transform: scale(1.0);
    opacity: 0.3;
  }
  100% {
    transform: scale(0.9);
    opacity: 0.6;
  }
} 