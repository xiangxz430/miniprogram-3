/* custom-tab-bar/index.wxss */
.tab-bar-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding-bottom: env(safe-area-inset-bottom);
  z-index: 9999;
}

.tab-bar-bg {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  box-shadow: 0 -3px 15px rgba(0, 0, 0, 0.05);
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
}

.tab-bar {
  position: relative;
  display: flex;
  height: 110rpx;
  background: transparent;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  overflow: hidden;
}

.tab-bar-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  transition: all 0.3s ease;
}

.tab-bar-item.active {
  transform: translateY(-5rpx);
}

.tab-bar-item-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.icon-container {
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 2px;
}

.tab-bar-item-icon {
  width: 50rpx;
  height: 50rpx;
  transition: all 0.3s ease;
}

/* 自定义CSS图标实现 */
.icon-mbti {
  width: 50rpx;
  height: 50rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  position: relative;
}

.icon-mbti:before, .icon-mbti:after {
  content: '';
  position: absolute;
  width: 100%;
  height: 3px;
  background-color: #94a3b8;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.icon-mbti:after {
  transform: translateY(-50%) rotate(90deg);
}

.icon-mbti .square {
  width: 50%;
  height: 50%;
  box-sizing: border-box;
}

.icon-mbti .square:nth-child(1) {
  border-top: 3px solid #94a3b8;
  border-left: 3px solid #94a3b8;
}

.icon-mbti .square:nth-child(2) {
  border-top: 3px solid #94a3b8;
  border-right: 3px solid #94a3b8;
}

.icon-mbti .square:nth-child(3) {
  border-bottom: 3px solid #94a3b8;
  border-left: 3px solid #94a3b8;
}

.icon-mbti .square:nth-child(4) {
  border-bottom: 3px solid #94a3b8;
  border-right: 3px solid #94a3b8;
}

.icon-mbti-wrapper {
  display: grid;
  grid-template-columns: 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  width: 50rpx;
  height: 50rpx;
  position: relative;
}

.icon-mbti-wrapper:before, .icon-mbti-wrapper:after {
  content: '';
  position: absolute;
  background-color: #94a3b8;
  z-index: 1;
}

.icon-mbti-wrapper:before {
  width: 100%;
  height: 2px;
  top: 50%;
  left: 0;
  transform: translateY(-50%);
}

.icon-mbti-wrapper:after {
  width: 2px;
  height: 100%;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}

.icon-mbti-wrapper .square {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
}

.icon-mbti-wrapper .square:nth-child(1) {
  border-top: 3px solid #94a3b8;
  border-left: 3px solid #94a3b8;
}

.icon-mbti-wrapper .square:nth-child(2) {
  border-top: 3px solid #94a3b8;
  border-right: 3px solid #94a3b8;
}

.icon-mbti-wrapper .square:nth-child(3) {
  border-bottom: 3px solid #94a3b8;
  border-left: 3px solid #94a3b8;
}

.icon-mbti-wrapper .square:nth-child(4) {
  border-bottom: 3px solid #94a3b8;
  border-right: 3px solid #94a3b8;
}

/* 激活状态下的MBTI图标 */
.tab-bar-item.active .icon-mbti-wrapper:before, 
.tab-bar-item.active .icon-mbti-wrapper:after {
  background-color: #3b82f6;
}

.tab-bar-item.active .icon-mbti-wrapper .square:nth-child(1) {
  border-top: 3px solid #3b82f6;
  border-left: 3px solid #3b82f6;
}

.tab-bar-item.active .icon-mbti-wrapper .square:nth-child(2) {
  border-top: 3px solid #3b82f6;
  border-right: 3px solid #3b82f6;
}

.tab-bar-item.active .icon-mbti-wrapper .square:nth-child(3) {
  border-bottom: 3px solid #3b82f6;
  border-left: 3px solid #3b82f6;
}

.tab-bar-item.active .icon-mbti-wrapper .square:nth-child(4) {
  border-bottom: 3px solid #3b82f6;
  border-right: 3px solid #3b82f6;
}

.tab-bar-item.active .icon-mbti-wrapper {
  transform: scale(1.15);
}

.tab-bar-item.active .tab-bar-item-icon {
  transform: scale(1.15);
}

.tab-bar-item-circle {
  position: absolute;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: rgba(59, 130, 246, 0.1);
  z-index: -1;
  animation: pulse 2s infinite;
}

.tab-bar-item-text {
  font-size: 22rpx;
  line-height: 1;
  font-weight: 500;
  transition: all 0.3s ease;
  margin-top: 6rpx;
}

.tab-bar-item.active .tab-bar-item-text {
  font-weight: 600;
  transform: scale(1.05);
}

@keyframes pulse {
  0% {
    transform: scale(0.95);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.05);
    opacity: 0.4;
  }
  100% {
    transform: scale(0.95);
    opacity: 0.8;
  }
}

/* 用户图标样式 */
.icon-user-wrapper {
  width: 50rpx;
  height: 50rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.icon-user-head {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  background-color: #94a3b8;
  margin-bottom: 4rpx;
}

.icon-user-body {
  width: 32rpx;
  height: 16rpx;
  border-radius: 16rpx 16rpx 8rpx 8rpx;
  background-color: #94a3b8;
}

/* 激活状态下的用户图标 */
.icon-user-wrapper.active .icon-user-head,
.icon-user-wrapper.active .icon-user-body {
  background-color: #3b82f6;
} 