/* MBTI测试图标样式 */

/* 通用图标样式 */
.icon {
  display: inline-block;
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
  position: relative;
  text-align: center;
  line-height: 48rpx;
  border-radius: 50%;
}

