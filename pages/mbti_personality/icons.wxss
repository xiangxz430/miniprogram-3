/* 方位图标样式 */
.direction-icon {
  display: inline-block;
  width: 36rpx;
  height: 36rpx;
  line-height: 36rpx;
  text-align: center;
  margin-right: 12rpx;
  border-radius: 50%;
}

.direction-icon.good {
  background-color: rgba(16, 185, 129, 0.1);
  color: #10b981;
}

.direction-icon.good::before {
  content: "✓";
}

.direction-icon.bad {
  background-color: rgba(239, 68, 68, 0.1);
  color: #ef4444;
}

.direction-icon.bad::before {
