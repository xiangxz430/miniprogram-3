@import "./icons.wxss";

/* 公共样式 */
.container {
  padding: 20rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom)); /* 增加底部内边距，防止TabBar遮挡 */
  min-height: 100vh;
  background-color: #f8fafc;
  box-sizing: border-box;
  width: 100%;
  max-width: 100%;
  overflow-x: hidden;
  position: relative;
  text-align: center; /* 整体容器居中 */
}

.header {
  margin-bottom: 32rpx;
  text-align: center;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
  word-wrap: break-word;
  line-height: 1.3;
  text-align: center; /* 标题居中 */
}

.subtitle {
  font-size: 24rpx;
  color: #64748b;
  margin-top: 8rpx;
  display: block;
  word-wrap: break-word;
  line-height: 1.4;
  text-align: center; /* 副标题居中 */
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  position: relative;
  padding-left: 20rpx;
  word-wrap: break-word;
  line-height: 1.3;
  text-align: center; /* 章节标题居中 */
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 8rpx;
  width: 8rpx;
  height: 28rpx;
  background: #4f46e5;
  border-radius: 4rpx;
}

/* 标签页导航 - 美化版 */
.tab-nav {
  width: 100%;
  position: sticky;
  top: 0;
  z-index: 100;
  background-color: #f8fafc;
  padding: 20rpx 0;
  margin-bottom: 32rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.tab-wrapper {
  position: relative;
  display: flex;
  width: 100%;
  height: 80rpx;
  background-color: #f1f5f9;
  border-radius: 12rpx;
  overflow: hidden;
  box-sizing: border-box;
}

.tab-item {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  z-index: 2;
  min-width: 0;
}

.tab-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #64748b;
  text-align: center;
  transition: all 0.3s;
  word-wrap: break-word;
  line-height: 1.2;
  padding: 0 8rpx;
}

.tab-item.active .tab-text {
  color: #ffffff;
  font-weight: 600;
}

.slider {
  position: absolute;
  width: 25%;  /* 适合4个标签的宽度 */
  height: 80rpx; /* 与tab-wrapper高度一致 */
  top: 0;
  background: linear-gradient(135deg, #3b82f6, #4f46e5);
  border-radius: 12rpx; /* 与tab-wrapper圆角一致 */
  z-index: 1;
  transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 标签页内容包装器 */
.tabs-container {
  position: relative;
  width: 100%;
  min-height: calc(100vh - 200rpx); /* 确保足够的最小高度 */
}

/* 标签页内容样式 */
.tab-content {
  background-color: #ffffff;
  margin-bottom: 32rpx;
  padding: 20rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 800rpx; /* 增加最小高度，确保内容区域稳定 */
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  position: relative;
}

/* 进度条 */
.progress-container {
  margin-bottom: 24rpx;
}

.progress-text {
  font-size: 24rpx;
  color: #475569;
  margin-bottom: 12rpx;
  font-weight: 500;
  word-wrap: break-word;
  line-height: 1.3;
}

.progress-bar {
  height: 12rpx;
  background-color: #e9ecef;
  border-radius: 6rpx;
  overflow: hidden;
}

.progress-value {
  height: 100%;
  background-color: #3b82f6;
  transition: width 0.5s;
  border-radius: 6rpx;
}

/* 问题卡片改进 */
.question-card {
  background-color: #ffffff;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
  padding: 24rpx;
  margin-bottom: 24rpx;
  width: 100%;
  max-width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

.question-number {
  font-size: 20rpx;
  color: #3b82f6;
  margin-bottom: 12rpx;
  background-color: #e0eaff;
  display: inline-block;
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  word-wrap: break-word;
}

.question-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 24rpx;
  line-height: 1.4;
  word-wrap: break-word;
  text-align: center; /* 问题文字居中 */
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.option {
  display: flex;
  align-items: flex-start;
  padding: 0;
  background-color: transparent;
  border: none;
  margin-bottom: 12rpx;
  width: 100%;
  box-sizing: border-box;
}

.option.active .radio {
  border-color: #3b82f6;
  background-color: #ffffff;
}

.option.active .radio::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #3b82f6;
}

.radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ced4da;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
  background-color: #fff;
}

/* 导航按钮 */
.navigation-buttons {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 30rpx;
}

.question-nav {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
}

.prev-btn, .next-btn {
  flex: 1;
  padding: 16rpx 32rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
}

.prev-btn {
  background-color: #ffffff;
  color: #4b5563;
  border: 1rpx solid #d1d5db;
}

.prev-btn[disabled] {
  opacity: 0.5;
  color: #9ca3af;
}

.next-btn {
  background-color: #3b82f6;
  color: white;
  font-weight: 500;
}

.next-btn[disabled] {
  opacity: 0.5;
  background-color: #93c5fd;
}

.back-to-mode-btn {
  width: 100%;
  padding: 16rpx 32rpx;
  background-color: #f3f4f6;
  color: #4b5563;
  border: 1rpx solid #d1d5db;
  border-radius: 16rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

.back-to-mode-btn:active {
  background-color: #e5e7eb;
}

/* 测试提示 */
.test-tips {
  margin-top: 40rpx;
  padding: 20rpx;
  background-color: #f8fafc;
  border-radius: 12rpx;
  border: 1rpx solid #e2e8f0;
}

.tip-text {
  display: block;
  font-size: 24rpx;
  color: #64748b;
  line-height: 1.6;
  margin-bottom: 8rpx;
}

/* 结果页面改进 */
.result-section {
  padding: 0;
  background-color: transparent;
  box-shadow: none;
}

.result-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.result-time {
  font-size: 24rpx;
  color: #94a3b8;
}

.personality-card {
  background: linear-gradient(135deg, #4f46e5 0%, #2563eb 100%);
  border-radius: 16rpx;
  padding: 40rpx 30rpx;
  margin-bottom: 30rpx;
  color: #ffffff;
  box-shadow: 0 8rpx 20rpx rgba(79, 70, 229, 0.3);
}

.flex {
  display: flex;
}

.justify-between {
  justify-content: space-between;
}

.items-center {
  align-items: center;
}

.personality-type {
  font-size: 46rpx;
  font-weight: bold;
  letter-spacing: 2rpx;
}

.personality-percentage {
  font-size: 24rpx;
  opacity: 0.9;
  background: rgba(255, 255, 255, 0.2);
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.personality-name {
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 16rpx;
}

.personality-alias {
  font-size: 28rpx;
  margin-top: 8rpx;
  opacity: 0.9;
}

.personality-description-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.personality-description {
  font-size: 30rpx;
  line-height: 1.6;
  color: #333;
  text-align: center; /* 改为居中对齐 */
}

/* 偏好分析改进 */
.preference-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.preference-item {
  margin-bottom: 30rpx;
}

.preference-item:last-child {
  margin-bottom: 0;
}

.preference-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
  font-size: 26rpx;
}

.preference-name {
  color: #555;
}

.preference-vs {
  color: #999;
  font-weight: 400;
}

.preference-bar {
  height: 16rpx;
  background-color: #f1f5f9;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 8rpx;
}

.preference-value {
  height: 100%;
  background: linear-gradient(90deg, #4f46e5 0%, #6366f1 100%);
  border-radius: 8rpx;
}

.preference-percentage {
  text-align: right;
  font-size: 24rpx;
  color: #666;
}

/* 认知功能栈 */
.cognitive-functions {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.function-item {
  padding: 24rpx;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.function-item:last-child {
  margin-bottom: 0;
}

.function-item.primary {
  background-color: #e6f7ff;
  border-left: 6rpx solid #1890ff;
}

.function-item.secondary {
  background-color: #f6ffed;
  border-left: 6rpx solid #52c41a;
}

.function-item.tertiary {
  background-color: #fff7e6;
  border-left: 6rpx solid #fa8c16;
}

.function-item.inferior {
  background-color: #fff1f0;
  border-left: 6rpx solid #f5222d;
}

.function-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.function-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.function-role {
  font-size: 24rpx;
  color: #666;
  background: rgba(0, 0, 0, 0.05);
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
}

.function-description {
  font-size: 26rpx;
  line-height: 1.5;
  color: #555;
  text-align: center; /* 功能描述居中 */
}

/* 重新测试按钮 */
.restart-btn {
  background: #4f46e5;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 32rpx;
  margin-top: 40rpx;
  margin-bottom: 60rpx;
  box-shadow: 0 6rpx 16rpx rgba(79, 70, 229, 0.2);
}

/* 模型部分样式 */
.model-section, .career-section {
  margin-bottom: 30rpx;
}

.model-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 30rpx;
  border: 1rpx solid #e2e8f0;
}

.model-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.model-icon {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #a855f7, #ec4899);
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: white;
  font-size: 40rpx;
}

.model-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #1e293b;
  display: block;
  margin-bottom: 4rpx;
}

.model-subtitle {
  font-size: 24rpx;
  color: #64748b;
}

.connection-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.connection-left {
  width: 120rpx;
  color: #a855f7;
  font-weight: 500;
  font-size: 28rpx;
}

.connection-right {
  width: 120rpx;
  text-align: right;
  color: #3b82f6;
  font-weight: 500;
  font-size: 28rpx;
}

.connection-line {
  flex: 1;
  height: 2rpx;
  background: linear-gradient(to right, #a855f7, #3b82f6);
  position: relative;
  margin: 0 20rpx;
}

.connection-line::after {
  content: '';
  position: absolute;
  right: -4rpx;
  top: -4rpx;
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  background-color: #3b82f6;
}

/* 人格类型网格 */
.personality-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 24rpx;
  margin-bottom: 40rpx;
}

.personality-grid-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  position: relative;
  transition: all 0.3s ease;
}

.personality-grid-item:hover {
  transform: translateY(-5rpx);
  box-shadow: 0 10rpx 16rpx rgba(0, 0, 0, 0.1);
}

.personality-grid-item:first-child {
  border-top: 4rpx solid #4f46e5;
}

.personality-grid-item:last-child {
  border-top: 4rpx solid #8b5cf6;
}

.grid-title {
  font-size: 26rpx;
  color: #64748b;
  margin-bottom: 16rpx;
  text-align: center;
  width: 100%;
  position: relative;
}

.grid-title::after {
  content: '';
  position: absolute;
  bottom: -10rpx;
  left: 25%;
  width: 50%;
  height: 2rpx;
  background-color: #e2e8f0;
}

.grid-type {
  font-size: 48rpx;
  font-weight: bold;
  margin: 20rpx 0 10rpx;
  background: linear-gradient(to right, #4f46e5, #8b5cf6);
  -webkit-background-clip: text;
  color: transparent;
}

.personality-grid-item:first-child .grid-type {
  background: linear-gradient(to right, #4f46e5, #6366f1);
}

.personality-grid-item:last-child .grid-type {
  background: linear-gradient(to right, #7e22ce, #8b5cf6);
}

.grid-name {
  font-size: 28rpx;
  color: #4b5563;
  margin-bottom: 20rpx;
  text-align: center;
  font-weight: 500;
}

.grid-description {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
  text-align: center;
}

/* 行业匹配 */
.industry-match {
  background-color: #ecfdf5;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 20rpx;
}

.industry-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.icon-blue {
  color: #10b981;
}

.industry-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #047857;
  margin-left: 16rpx;
}

.industry-description {
  font-size: 26rpx;
  color: #6b7280;
  margin-bottom: 24rpx;
}

.industry-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
}

.industry-item {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.industry-item-name {
  font-size: 28rpx;
  color: #4b5563;
  margin-left: 16rpx;
}

/* 方位匹配 */
.direction-match {
  background-color: #eff6ff;
  border-radius: 16rpx;
  padding: 32rpx;
}

.direction-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.direction-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #1d4ed8;
  margin-left: 16rpx;
}

.direction-grid {
  display: grid;
  grid-template-columns: repeat(2, 1fr);
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.direction-item {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 6rpx rgba(0, 0, 0, 0.05);
}

.direction-item.good {
  background-color: #d1fae5;
  color: #065f46;
}

.direction-item.bad {
  background-color: #fee2e2;
  color: #b91c1c;
}

.direction-item-name {
  font-size: 28rpx;
}

.direction-tip {
  display: flex;
  align-items: center;
  background-color: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-top: 16rpx;
}

.tip-icon {
  color: #3b82f6;
  margin-right: 12rpx;
  font-size: 32rpx;
}

.tip-text {
  font-size: 26rpx;
  color: #6b7280;
  line-height: 1.6;
}

/* 完整性格描述 */
.full-description-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.full-description {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: center; /* 改为居中对齐 */
}

/* 性格优势与劣势 */
.strengths-weaknesses {
  margin-bottom: 40rpx;
}

.sw-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.sw-list {
  margin-top: 20rpx;
}

.sw-item {
  display: flex;
  margin-bottom: 16rpx;
  align-items: flex-start;
}

.sw-bullet {
  flex-shrink: 0;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  margin-right: 16rpx;
  margin-top: 4rpx;
}

.sw-container:nth-child(1) .sw-bullet {
  background-color: #e6f7ff;
  color: #1890ff;
}

.sw-container:nth-child(2) .sw-bullet {
  background-color: #fff2e8;
  color: #fa8c16;
}

.sw-text {
  font-size: 28rpx;
  line-height: 1.5;
  color: #333;
  flex: 1;
  text-align: center; /* 优劣势文字居中 */
}

/* 职业建议 */
.careers-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.careers-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.career-item {
  display: flex;
  align-items: center;
  padding: 16rpx 24rpx;
  background: #f9f9f9;
  border-radius: 30rpx;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}

.career-icon {
  margin-right: 10rpx;
  font-size: 28rpx;
}

.career-name {
  font-size: 26rpx;
  color: #333;
  text-align: center; /* 职业名称居中 */
}

/* 人际关系特点 */
.relationship-box {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.relationship-section {
  margin-bottom: 24rpx;
}

.relationship-section:last-child {
  margin-bottom: 0;
}

.relationship-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
}

.relationship-title::before {
  content: "";
  display: inline-block;
  width: 8rpx;
  height: 28rpx;
  background: #4f46e5;
  margin-right: 16rpx;
  border-radius: 4rpx;
}

.relationship-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  text-align: center; /* 改为居中对齐 */
}

/* 沟通与工作风格 */
.style-container {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.style-item {
  margin-bottom: 24rpx;
}

.style-item:last-child {
  margin-bottom: 0;
