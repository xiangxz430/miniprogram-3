/* 雷达图样式 */
.radar-section {
  margin: 40rpx 0;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.radar-chart {
  width: 450rpx;
  height: 450rpx;
  position: relative;
  margin: 0 auto 30rpx;
  background-color: #f8fafc;
  border-radius: 50%;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 雷达图背景网格 */
.radar-chart::before {
  content: '';
  position: absolute;
  width: 70%;
  height: 70%;
  border: 1px dashed #cbd5e1;
  border-radius: 50%;
}

.radar-chart::after {
  content: '';
  position: absolute;
  width: 90%;
  height: 90%;
  border: 1px dashed #cbd5e1;
  border-radius: 50%;
}

/* 雷达图轴线 */
.radar-axis {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  pointer-events: none;
}

.radar-axis-line {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 100%;
  height: 1px;
  background-color: #cbd5e1;
  transform-origin: 0 0;
}

.radar-axis-line:nth-child(1) {
  transform: rotate(0deg);
}

.radar-axis-line:nth-child(2) {
  transform: rotate(90deg);
}

.radar-axis-line:nth-child(3) {
  transform: rotate(45deg);
}

.radar-axis-line:nth-child(4) {
  transform: rotate(-45deg);
}

/* 数据多边形 */
.radar-value {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  clip-path: polygon(
    calc(50% + (var(--thinking) * 180rpx / 100)) 50%,
    50% calc(50% - (var(--creativity) * 180rpx / 100)),
    calc(50% - (var(--execution) * 180rpx / 100)) 50%,
    50% calc(50% + (var(--perception) * 180rpx / 100))
  );
  background-color: rgba(99, 102, 241, 0.2);
  border: 2rpx solid rgba(99, 102, 241, 0.6);
}

/* 雷达点 */
.radar-point {
  position: absolute;
  width: 12rpx;
  height: 12rpx;
  background-color: #6366f1;
  border-radius: 50%;
  z-index: 2;
}

.radar-point-thinking {
  left: calc(50% + (var(--thinking) * 180rpx / 100));
  top: 50%;
  transform: translate(-50%, -50%);
}

.radar-point-creativity {
  left: 50%;
  top: calc(50% - (var(--creativity) * 180rpx / 100));
  transform: translate(-50%, -50%);
}

.radar-point-execution {
  left: calc(50% - (var(--execution) * 180rpx / 100));
  top: 50%;
  transform: translate(-50%, -50%);
}

.radar-point-perception {
  left: 50%;
  top: calc(50% + (var(--perception) * 180rpx / 100));
  transform: translate(-50%, -50%);
}

