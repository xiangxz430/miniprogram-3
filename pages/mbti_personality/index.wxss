@import "./icons.wxss";

/* 公共样式 */
.container {
  padding: 30rpx;
  padding-bottom: calc(100rpx + env(safe-area-inset-bottom)); /* 增加底部内边距，防止TabBar遮挡 */
  min-height: 100vh;
  background-color: #f8fafc;
  box-sizing: border-box;
}

.header {
  margin-bottom: 40rpx;
  text-align: center;
}

.title {
  font-size: 46rpx;
  font-weight: bold;
  color: #1e293b;
  display: block;
}

.subtitle {
  font-size: 28rpx;
  color: #64748b;
  margin-top: 10rpx;
  display: block;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 10rpx;
  width: 10rpx;
  height: 32rpx;
  background: #4f46e5;
  border-radius: 5rpx;
}

/* 标签页导航 - 美化版 */
.tab-nav {
  width: 100%;
  margin-bottom: 40rpx;
  overflow: hidden;
}

.tab-wrapper {
  position: relative;
  display: flex;
  width: 100%;
  height: 88rpx;
  background-color: #f1f5f9;
  border-radius: 16rpx;
  overflow: hidden;
}

.tab-item {
  position: relative;
  flex: 1;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: all 0.3s;
  z-index: 2;
}

.tab-text {
  font-size: 30rpx;
  font-weight: 500;
  color: #64748b;
  text-align: center;
  transition: all 0.3s;
}

.tab-item.active .tab-text {
  color: #ffffff;
  font-weight: 600;
}

.slider {
  position: absolute;
  width: 33.333%;  /* 适合3个标签的宽度 */
  height: 88rpx; /* 与tab-wrapper高度一致 */
  top: 0;
  background: linear-gradient(135deg, #3b82f6, #4f46e5);
  border-radius: 16rpx; /* 与tab-wrapper圆角一致 */
  z-index: 1;
  transition: left 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  box-shadow: 0 4rpx 12rpx rgba(59, 130, 246, 0.3);
}

/* 标签页内容样式 */
.tab-content {
  background-color: #ffffff;
  margin-bottom: 40rpx;
  padding: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  min-height: 400rpx; /* 确保内容区域有足够的高度 */
}

/* 进度条 */
.progress-container {
  margin-bottom: 30rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #475569;
  margin-bottom: 15rpx;
  font-weight: 500;
}

.progress-bar {
  height: 16rpx;
  background-color: #e9ecef;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-value {
  height: 100%;
  background-color: #3b82f6;
  transition: width 0.5s;
  border-radius: 8rpx;
}

/* 问题卡片改进 */
.question-card {
  background-color: #ffffff;
  border-radius: 16rpx;
  border: 1rpx solid #e2e8f0;
  padding: 32rpx;
  margin-bottom: 30rpx;
}

.question-number {
  font-size: 24rpx;
  color: #3b82f6;
  margin-bottom: 16rpx;
  background-color: #e0eaff;
  display: inline-block;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.question-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #1e293b;
  margin-bottom: 32rpx;
  line-height: 1.5;
}

.options-container {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.option {
  display: flex;
  align-items: flex-start;
  padding: 0;
  background-color: transparent;
  border: none;
  margin-bottom: 16rpx;
}

.option.active .radio {
  border-color: #3b82f6;
  background-color: #ffffff;
}

.option.active .radio::after {
  content: '';
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #3b82f6;
}

.radio {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  border: 2rpx solid #ced4da;
  margin-right: 20rpx;
  flex-shrink: 0;
  position: relative;
  background-color: #fff;
}

/* 导航按钮 */
.navigation-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  margin-top: 30rpx;
}

.prev-btn, .next-btn {
