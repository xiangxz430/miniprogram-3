  background: linear-gradient(135deg, #3b82f6, #1e40af) !important;
  color: #fff !important;
  font-size: 24rpx !important;
  display: flex !important;
  align-items: center !important;
  justify-content: center !important;
  text-align: center !important;
  padding: 10rpx 18rpx !important;
  border-radius: 28rpx !important;
  line-height: 1.2 !important;
  border: none !important;
  box-shadow: 0 2rpx 10rpx rgba(59, 130, 246, 0.2) !important;
  transition: all 0.3s ease !important;
  font-weight: 500 !important;
  position: relative !important;
  overflow: hidden !important;
  height: 56rpx !important;
  width: auto !important;
  min-width: 90rpx !important;
  white-space: nowrap !important;
  margin: 0 !important;
}

.add-friend-btn::after {
  border: none !important;
}

.add-friend-btn::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.15), transparent);
  transition: left 0.5s;
}

.add-friend-btn:hover::before {
  left: 100%;
}

.add-friend-btn:active {
  transform: translateY(1rpx) !important;
  box-shadow: 0 1rpx 6rpx rgba(59, 130, 246, 0.3) !important;
}

.add-friend-btn .iconfont {
  margin-right: 6rpx !important;
  font-size: 22rpx !important;
}

.friends-list {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.friend-card {
  display: flex;
  align-items: flex-start;
  background: white;
  border-radius: 20rpx;
  padding: 32rpx 28rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  border: 1rpx solid rgba(255, 255, 255, 0.8);
  position: relative;
  overflow: hidden;
}

.friend-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: linear-gradient(90deg, #667eea, #764ba2, #f093fb);
}

.friend-card:hover {
  box-shadow: 0 12rpx 32rpx rgba(0, 0, 0, 0.12);
  transform: translateY(-4rpx);
}

.friend-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 600;
  color: white;
  margin-right: 24rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.8);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.15);
  flex-shrink: 0;
}

.friend-info {
  flex: 1;
  margin-left: 0;
  cursor: pointer;
  min-width: 0;
}

.friend-header {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
  flex-wrap: wrap;
  gap: 12rpx;
}

.friend-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #1f2937;
}

.friend-zodiac {
  padding: 4rpx 12rpx;
  border-radius: 16rpx;
  font-size: 22rpx;
  font-weight: 500;
  background: linear-gradient(135deg, #667eea, #764ba2);
  color: white;
}

.friend-details {
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  gap: 16rpx;
}

.friend-mbti {
  font-size: 26rpx;
  color: #6b7280;
  font-weight: 500;
}

.friend-relation {
  padding: 4rpx 10rpx;
  background-color: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
  border-radius: 12rpx;
  font-size: 22rpx;
  font-weight: 500;
}

.friend-extra-info {
  margin-top: 8rpx;
  font-size: 24rpx;
  color: #9ca3af;
  line-height: 1.5;
}

.friend-birth {
  display: block;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.friend-location {
  display: block;
  color: #9ca3af;
}

.friend-actions {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  margin-left: 12rpx;
  align-items: flex-end;
  justify-content: center;
}

.friend-action-btn {
