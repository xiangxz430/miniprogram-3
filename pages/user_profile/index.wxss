/* pages/user_profile/index.wxss */

/* 重置button默认样式 */
button {
  margin: 0;
  padding: 0;
  border: none;
  background: none;
  font-size: inherit;
  line-height: inherit;
  border-radius: 0;
  outline: none;
  box-sizing: border-box;
}

button::after {
  border: none;
}

/* 容器样式 - 覆盖app.wxss中的默认设置 */
.container {
  min-height: 100vh;
  background-color: #f9fafb;
  padding-bottom: 120rpx; /* 增加底部padding，确保有足够空间，避免被tabBar覆盖 */
  display: flex;
  flex-direction: column;
  width: 100%;
  box-sizing: border-box;
  /* 覆盖app.wxss中可能冲突的样式 */
  padding-top: 0;
  align-items: stretch;
  justify-content: flex-start;
}

/* 个人资料头部 */
.profile-header {
  background: linear-gradient(to right, #8b5cf6, #6366f1);
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  color: #fff;
  position: relative;
  border-bottom-left-radius: 60rpx;
  border-bottom-right-radius: 60rpx;
  margin-bottom: 30rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 头部编辑按钮 */
.edit-btn-header {
  position: absolute;
  top: 40rpx;
  right: 30rpx;
  background: linear-gradient(135deg, #3b82f6, #1d4ed8);
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
  transition: all 0.3s ease;
  line-height: 1.2;
  height: 52rpx;
  width: auto;
  min-width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  cursor: pointer;
  white-space: nowrap;
}

.edit-btn-header:active {
  background: linear-gradient(135deg, #2563eb, #1e40af);
  transform: scale(0.96);
  box-shadow: 0 1rpx 6rpx rgba(59, 130, 246, 0.3);
}

/* 昵称输入框样式 */
.nickname-input {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  background-color: rgba(255, 255, 255, 0.2);
  border-radius: 8rpx;
  padding: 6rpx 10rpx;
  width: 85%;
  color: #fff;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #e5e7eb;
}

.avatar image {
  width: 100%;
  height: 100%;
}

.avatar-default {
  background-color: #fff;
  color: #3b82f6;
  font-size: 64rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: block;
}

.user-description {
  font-size: 28rpx;
  opacity: 0.9;
}

/* 标签页容器 */
.tabs-container {
  background-color: #fff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  overflow: visible; /* 修改为visible，避免内容被截断 */
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  width: calc(100% - 60rpx);
  align-self: center;
  flex: 1;
  display: flex;
  flex-direction: column;
  margin-bottom: 30rpx; /* 确保底部有足够的空间 */
}

/* 标签页 */
.tabs {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  border-bottom: 1rpx solid #e5e7eb;
  width: 100%;
}

.tab {
  text-align: center;
  padding: 25rpx 10rpx;
  font-size: 28rpx;
  position: relative;
  color: #64748b;
  font-weight: 500;
  border-bottom: 4rpx solid transparent;
  z-index: 1; /* 确保tab可点击 */
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.tab.active {
  color: #3b82f6;
  border-bottom: 4rpx solid #3b82f6;
}

/* 小屏幕设备优化 */
@media screen and (max-width: 750rpx) {
  .tab {
    font-size: 26rpx;
    padding: 20rpx 8rpx;
  }
}

/* 极小屏幕设备优化 */
@media screen and (max-width: 650rpx) {
  .tab {
    font-size: 24rpx;
    padding: 18rpx 6rpx;
  }
}

/* 内容区域 */
.tab-content {
  padding: 30rpx;
  flex: 1;
  overflow-y: visible; /* 修改为visible，确保内容可以正常显示和滚动 */
  -webkit-overflow-scrolling: touch;
  display: block; /* 确保内容可见 */
}

.tab-content[hidden] {
  display: none;
}

.section {
  margin-bottom: 40rpx;
}

.section-title {
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 30rpx;
  color: #1e293b;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.section-header .edit-btn {
  background: linear-gradient(135deg, #3b82f6, #1d4ed8) !important;
  color: white !important;
  border: none;
  border-radius: 20rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
  font-weight: 500;
  box-shadow: 0 2rpx 8rpx rgba(59, 130, 246, 0.2);
  transition: all 0.3s ease;
  line-height: 1.2;
  height: 52rpx;
  width: auto;
  min-width: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
}

.section-header .edit-btn:active {
  background: linear-gradient(135deg, #2563eb, #1e40af);
  transform: scale(0.96);
  box-shadow: 0 1rpx 6rpx rgba(59, 130, 246, 0.3);
}

.view-all {
  font-size: 28rpx;
  color: #3b82f6;
}

/* 今日纵览卡片容器 */
.overview-cards {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  width: 100%;
  box-sizing: border-box;
}

/* 单个卡片 */
.profile-card {
  flex: 1 1 45%;
  min-width: 44vw;
  max-width: 48vw;
  box-sizing: border-box;
  padding: 24rpx;
  border-radius: 16rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 16rpx;
  overflow: hidden;
}

.profile-card:active {
  transform: translateY(-5rpx);
}

.card-inner {
  display: flex;
  align-items: center;
}

.blue-gradient {
  background: linear-gradient(to bottom right, #ebf5ff, #dbeafe);
}

.yellow-gradient {
  background: linear-gradient(to bottom right, #ebf5ff, #dbeafe);
}

.card-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 32rpx;
}

.icon-bg-blue {
  background-color: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}

.icon-bg-yellow {
  background-color: rgba(59, 130, 246, 0.1);
  color: #3b82f6;
}

.card-content {
  flex: 1;
}

.card-label {
  font-size: 28rpx;
  color: #64748b;
  display: block;
  margin-bottom: 6rpx;
  font-weight: 600;
}

/* 卡片内容不换行溢出时省略 */
.card-value {
  font-size: 30rpx;
  font-weight: 500;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  max-width: 100%;
}

.blue-gradient .card-value {
  color: #3b82f6;
}

.yellow-gradient .card-value {
  color: #3b82f6;
}

.star {
  color: #3b82f6;
}

.star-empty {
  color: #d1d5db;
}

/* 基础信息列表 */
.info-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  display: flex;
  align-items: center;
  color: #64748b;
}

.info-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #94a3b8;
}

/* 性别图标样式 */
.icon-gender::before {
  content: "👤";
  font-size: 28rpx;
}

.info-value {
  color: #1e293b;
  font-weight: 500;
}

/* 梦境列表 */
.dream-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.dream-header {
  display: flex;
  justify-content: space-between;
  margin-bottom: 16rpx;
}

.dream-title {
  font-weight: 600;
  color: #1e293b;
}

.dream-date {
  font-size: 24rpx;
  color: #94a3b8;
}

.dream-content {
  font-size: 28rpx;
  color: #64748b;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

/* 设置列表 */
.settings-list {
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
  border: 1rpx solid #f0f0f0;
}

.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-label {
  display: flex;
  align-items: center;
}

.setting-icon {
  width: 48rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
  font-size: 32rpx;
  color: #94a3b8;
}

.setting-text {
  color: #1e293b;
  font-size: 28rpx;
}

.setting-arrow {
  width: 16rpx;
  height: 16rpx;
  border-top: 3rpx solid #ccc;
  border-right: 3rpx solid #ccc;
  transform: rotate(45deg);
}

/* 好友列表 */
