.container {
  padding: 20px;
  font-size: 14px;
  line-height: 1.5;
}

.header {
  margin-bottom: 20px;
  text-align: center;
}

.title {
  font-size: 18px;
  font-weight: bold;
}

.btn-group {
  margin-bottom: 20px;
}

.section-title {
  font-size: 16px;
  font-weight: bold;
  margin-bottom: 10px;
  display: block;
}

.result-section {
  margin-bottom: 20px;
  padding: 10px;
  background-color: #f5f5f5;
  border-radius: 5px;
}

.result-card {
  display: flex;
  flex-direction: column;
}

.data-item {
  margin: 10px 0;
  padding: 10px;
  background-color: #fff;
  border-radius: 5px;
  display: flex;
  flex-direction: column;
}

.log-section {
  margin-top: 20px;
}

.log-container {
  height: 200px;
  border: 1px solid #ccc;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 5px;
}

.log-item {
  display: block;
  margin-bottom: 5px;
  font-family: monospace;
} 