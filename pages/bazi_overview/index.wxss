.container {
  padding: 32rpx 16rpx 40rpx 16rpx;
  background: #f6f7fa;
  min-height: 100vh;
}
.header {
  margin-top: 32rpx;
  margin-bottom: 32rpx;
  text-align: center;
}
.title {
  font-size: 48rpx;
  font-weight: 700;
  color: #222;
  letter-spacing: 2rpx;
}
.subtitle {
  font-size: 28rpx;
  color: #7b8794;
  margin-top: 8rpx;
}
.card {
  background: #fff;
  border-radius: 24rpx;
  box-shadow: 0 4rpx 24rpx rgba(0,0,0,0.06);
  padding: 36rpx 28rpx;
  margin-bottom: 36rpx;
  border: 1rpx solid #e5e7eb;
}
.input-card {
  margin-bottom: 44rpx;
}
.input-row {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}
.input-label {
  width: 120rpx;
  color: #555;
  font-size: 30rpx;
}
.input {
  flex: 1;
  border: none;
  background: #f1f5f9;
  border-radius: 12rpx;
  padding: 18rpx 22rpx;
  font-size: 30rpx;
}
.picker {
  flex: 1;
  background: #f1f5f9;
  border-radius: 12rpx;
  padding: 18rpx 22rpx;
  font-size: 30rpx;
  color: #333;
}
.btn-primary {
  width: 100%;
  background: linear-gradient(90deg, #4f8cff 0%, #1e40af 100%);
  color: #fff;
  font-size: 32rpx;
  border-radius: 16rpx;
  padding: 20rpx 0;
  margin-top: 12rpx;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(79,140,255,0.08);
  border: none;
}
.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}
.avatar {
  width: 80rpx;
  height: 80rpx;
  background: #e0e7ef;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  color: #4f8cff;
  margin-right: 24rpx;
}
.user-meta {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}
.user-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #222;
}
.user-birth, .user-lunar {
  font-size: 26rpx;
  color: #7b8794;
}
.bazi-grid {
  display: flex;
  justify-content: space-between;
  margin: 18rpx 0 12rpx 0;
}
.bazi-col {
  flex: 1;
  text-align: center;
}
.bazi-label {
  font-size: 24rpx;
  color: #888;
  margin-bottom: 6rpx;
  display: block;
}
.bazi-item {
  font-size: 32rpx;
  font-weight: 600;
  margin: 2rpx 0;
  border-radius: 8rpx;
  padding: 6rpx 0;
}
.element-wood { color: #16a34a; }
.element-fire { color: #ef4444; }
.element-earth { color: #eab308; }
.element-metal { color: #a3a3a3; }
.element-water { color: #0ea5e9; }
.bazi-meta {
  margin: 18rpx 0 10rpx 0;
  border-top: 1rpx solid #e5e7eb;
  padding-top: 12rpx;
}
.meta-row {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  color: #555;
  margin-bottom: 6rpx;
}
.meta-value {
  margin-left: 8rpx;
  color: #1e40af;
  font-weight: 500;
}
.meta-tag {
  margin-left: 10rpx;
  font-size: 22rpx;
  color: #fff;
  background: #4f8cff;
  border-radius: 8rpx;
  padding: 2rpx 10rpx;
}
.meta-value.unfavorable {
  color: #ef4444;
}
.element-dist {
  margin-top: 18rpx;
}
.dist-title {
  font-size: 26rpx;
  color: #1e40af;
  font-weight: 600;
  margin-bottom: 8rpx;
}
.dist-row {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}
.dist-label {
  width: 48rpx;
  font-size: 24rpx;
  font-weight: 600;
  margin-right: 8rpx;
}
.dist-count {
  width: 32rpx;
  text-align: right;
  color: #555;
  font-size: 24rpx;
  margin-right: 8rpx;
}
.dist-bar-bg {
  flex: 1;
  height: 12rpx;
  background: #e5e7eb;
  border-radius: 8rpx;
  overflow: hidden;
}
.dist-bar {
  height: 12rpx;
  border-radius: 8rpx;
}
.section-title {
  font-size: 30rpx;
  font-weight: 700;
  color: #1e40af;
  margin-bottom: 18rpx;
  border-left: 8rpx solid #4f8cff;
  padding-left: 16rpx;
}
.analysis-block {
  margin-bottom: 18rpx;
}
.analysis-title {
  font-size: 26rpx;
  color: #4f8cff;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.analysis-text {
  font-size: 26rpx;
  color: #555;
  line-height: 1.6;
}
.life-stages {
  margin-top: 8rpx;
}
.life-stage {
  display: flex;
  align-items: flex-start;
  margin-bottom: 16rpx;
}
.life-stage-dot {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: #e0e7ef;
  color: #4f8cff;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  margin-right: 14rpx;
}
.life-stage-meta {
  flex: 1;
}
.life-stage-title {
  font-size: 26rpx;
  color: #1e40af;
  font-weight: 600;
}
.life-stage-desc {
  font-size: 24rpx;
  color: #555;
  margin-top: 2rpx;
}
.lucky-block {
  margin-bottom: 18rpx;
}
.lucky-title {
  font-size: 26rpx;
  color: #4f8cff;
  font-weight: 600;
  margin-bottom: 4rpx;
}
.lucky-colors {
  display: flex;
  gap: 12rpx;
  margin: 8rpx 0 8rpx 0;
}
.lucky-color {
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  border: 2rpx solid #e5e7eb;
}
.lucky-text {
  font-size: 24rpx;
  color: #555;
  margin-left: 8rpx;
}
.lucky-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 6rpx;
}
.lucky-action {
  background: #e0e7ef;
  color: #1e40af;
  border-radius: 10rpx;
  padding: 6rpx 18rpx;
  font-size: 24rpx;
  margin-bottom: 4rpx;
}
.lucky-action.unlucky {
  background: #fee2e2;
  color: #ef4444;
}
