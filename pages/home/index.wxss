/* pages/home/index.wxss */

/* 页面容器 */
.container {
  position: relative;
  min-height: 100vh;
  background: linear-gradient(135deg, #f7f2ea 0%, #fff9ee 50%, #fef3e3 100%);
  padding: 40rpx 30rpx;
  box-sizing: border-box;
  padding-bottom: 120rpx; /* 为底部TabBar预留空间 */
  overflow-x: hidden; /* 防止水平溢出 */
}

/* 页面头部 */
.header {
  text-align: center;
  margin-bottom: 50rpx;
  padding: 20rpx 0;
  position: relative;
  animation: fadeInDown 0.8s ease-out;
}

.header::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 6rpx;
  background: linear-gradient(to right, #f8d57e, #f3a640);
  border-radius: 3rpx;
  box-shadow: 0 2rpx 4rpx rgba(243, 166, 64, 0.3);
}

.header .title {
  font-size: 52rpx;
  font-weight: bold;
  color: #3d1f00;
  text-shadow: 0 2rpx 4rpx rgba(0,0,0,0.1);
  letter-spacing: 2rpx;
  margin-bottom: 12rpx;
}

.header .subtitle {
  font-size: 28rpx;
  color: #8c6d3f;
  letter-spacing: 1rpx;
  opacity: 0.9;
}

/* 自动跳转提示 */
.auto-redirect-tip {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  background: rgba(255, 152, 0, 0.9);
  color: #fff;
  font-size: 28rpx;
  padding: 14rpx 30rpx;
  border-radius: 40rpx;
  z-index: 100;
  box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  animation: pulse 1.5s infinite alternate;
  display: flex;
  align-items: center;
}

.close-button {
  margin-left: 20rpx;
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.3);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
  line-height: 32rpx;
  font-weight: bold;
  cursor: pointer;
  transition: all 0.2s ease;
}

.close-button:active {
  background: rgba(255, 255, 255, 0.5);
  transform: scale(0.95);
}

@keyframes pulse {
  from {
    opacity: 0.8;
    box-shadow: 0 4rpx 16rpx rgba(255, 152, 0, 0.3);
  }
  to {
    opacity: 1;
    box-shadow: 0 4rpx 24rpx rgba(255, 152, 0, 0.5);
  }
}

/* 隐藏页面后的样式 */
.hidden-page-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #ffffff;
  z-index: 9999;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #ff9800;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #8c6d3f;
  letter-spacing: 2rpx;
}

/* 卡片通用样式 */
.card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 10rpx 30rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
  animation: fadeInUp 0.8s ease-out;
}

.card::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 6rpx;
  background: linear-gradient(to right, #ffcd3c, #ff9d00);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.card:active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(0, 0, 0, 0.06);
}

.card:active::before {
  opacity: 1;
}

.card-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #3d1f00;
  margin-bottom: 25rpx;
  position: relative;
  padding-left: 24rpx;
  display: flex;
  align-items: center;
}

.card-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 28rpx;
  background: linear-gradient(to bottom, #ffc107, #ff9800);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 8rpx rgba(255, 193, 7, 0.4);
}

/* 今日运势卡片 */
.today-fortune {
  background: linear-gradient(135deg, #ffffff 0%, #fff8ed 100%);
  position: relative;
  z-index: 1;
}

.today-fortune::after {
  content: "";
  position: absolute;
  bottom: -10rpx;
  right: -10rpx;
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: radial-gradient(circle, rgba(255, 193, 7, 0.1) 0%, rgba(255, 255, 255, 0) 70%);
  z-index: -1;
}

.fortune-brief {
  display: flex;
  margin-bottom: 30rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px dashed #f0e0c8;
}

.fortune-score {
  flex: 0 0 180rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-right: 30rpx;
  border-right: 1px solid #f0e0c8;
  position: relative;
}

.fortune-score::after {
  content: "";
  position: absolute;
  top: 50%;
  right: 0;
  transform: translateY(-50%);
  width: 1px;
  height: 80%;
  background: linear-gradient(to bottom, transparent, #f0e0c8, transparent);
}

.score {
  font-size: 64rpx;
  font-weight: bold;
  color: #ff9800;
  text-shadow: 0 2rpx 4rpx rgba(255, 152, 0, 0.2);
  position: relative;
}

.score::after {
  content: "";
  position: absolute;
  bottom: -8rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 80%;
  height: 6rpx;
  border-radius: 3rpx;
  background: linear-gradient(to right, transparent, rgba(255, 152, 0, 0.3), transparent);
}

.score-label {
  font-size: 24rpx;
  color: #8c6d3f;
  margin-top: 15rpx;
  opacity: 0.9;
}

.fortune-advice {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.advice-label {
  font-size: 28rpx;
  color: #8c6d3f;
  margin-bottom: 12rpx;
}

.advice-content {
  font-size: 32rpx;
  color: #4a2811;
  line-height: 1.5;
  font-weight: 500;
}

.fortune-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag {
  font-size: 26rpx;
  padding: 10rpx 24rpx;
  border-radius: 50rpx;
  display: inline-block;
  transition: transform 0.2s ease;
}

.tag:active {
  transform: scale(0.98);
}

.tag.lucky {
  background: linear-gradient(to right, #f8f1e0, #fdefd0);
  color: #d4a62c;
  box-shadow: 0 2rpx 8rpx rgba(212, 166, 44, 0.15);
}

.tag.unlucky {
  background: linear-gradient(to right, #f8e7e7, #fadddd);
  color: #c75450;
  box-shadow: 0 2rpx 8rpx rgba(199, 84, 80, 0.15);
}

/* 功能导航区域 */
.feature-section {
  margin-bottom: 50rpx;
  animation: fadeInUp 1s ease-out;
  animation-delay: 0.1s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #3d1f00;
  margin-bottom: 30rpx;
  position: relative;
  padding-left: 24rpx;
}

.section-title::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 32rpx;
  background: linear-gradient(to bottom, #ffc107, #ff9800);
  border-radius: 4rpx;
  box-shadow: 0 2rpx 6rpx rgba(255, 193, 7, 0.3);
}

.feature-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 24rpx;
}

.feature-item {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 36rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 10rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  transition: all 0.3s ease;
  overflow: hidden;
}

.feature-item::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(to right, #ffd54f, #ffb300);
  opacity: 0.8;
}

.feature-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.8), transparent 70%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.feature-item:active {
  transform: translateY(2rpx) scale(0.98);
  box-shadow: 0 5rpx 10rpx rgba(0, 0, 0, 0.04);
}

.feature-item:active::before {
  opacity: 0.6;
}

.feature-icon {
  width: 88rpx;
  height: 88rpx;
  margin-bottom: 20rpx;
  transition: transform 0.3s ease;
  z-index: 1;
}

.feature-item:active .feature-icon {
  transform: scale(1.1);
}

.feature-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #3d1f00;
  margin-bottom: 8rpx;
  z-index: 1;
}

.feature-desc {
  font-size: 24rpx;
  color: #8c6d3f;
  z-index: 1;
}

.coming-soon {
  opacity: 0.85;
}

.coming-soon-tag {
  position: absolute;
  top: 16rpx;
  right: 16rpx;
  background: linear-gradient(to right, #ff9800, #ff5722);
  color: white;
  font-size: 20rpx;
  font-weight: bold;
  padding: 6rpx 14rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 8rpx rgba(255, 87, 34, 0.3);
  z-index: 2;
  transform: rotate(5deg);
}

/* 每日一言卡片 */
.daily-quote-card {
  background: linear-gradient(135deg, #f9f1dd 0%, #ffebc4 100%);
  border-radius: 24rpx;
  padding: 50rpx 40rpx;
  margin-bottom: 40rpx;
  position: relative;
  overflow: hidden;
  box-shadow: 0 10rpx 30rpx rgba(255, 193, 7, 0.18);
  animation: fadeInUp 1.2s ease-out;
  animation-delay: 0.2s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.daily-quote-card::before {
  content: "";
  position: absolute;
  top: -20rpx;
  right: -20rpx;
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 193, 7, 0.1);
  border-radius: 50%;
}

.daily-quote-card::after {
  content: "";
  position: absolute;
  bottom: -30rpx;
  left: -30rpx;
  width: 180rpx;
  height: 180rpx;
  background: rgba(255, 193, 7, 0.08);
  border-radius: 50%;
}

.quote-icon {
  font-size: 130rpx;
  color: rgba(255, 193, 7, 0.18);
  position: absolute;
  top: -50rpx;
  left: 10rpx;
  font-family: 'Times New Roman', serif;
}

.quote-content {
  font-size: 34rpx;
  color: #3d1f00;
  line-height: 1.6;
  margin-bottom: 30rpx;
  position: relative;
  z-index: 1;
  font-weight: 500;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.5);
}

.quote-author {
  font-size: 26rpx;
  color: #8c6d3f;
  text-align: right;
  position: relative;
  z-index: 1;
  font-style: italic;
  margin-right: 10rpx;
}

/* 用户隐私数据声明 */
.privacy-statement {
  background: linear-gradient(135deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  padding: 30rpx;
  margin-bottom: 40rpx;
  box-shadow: 0 8rpx 20rpx rgba(0, 0, 0, 0.06);
  border: 1rpx solid rgba(243, 166, 64, 0.1);
  position: relative;
  overflow: hidden;
  animation: fadeInUp 1.2s ease-out;
  animation-delay: 0.3s;
  opacity: 0;
  animation-fill-mode: forwards;
}

.privacy-statement::before {
  content: "";
  position: absolute;
  top: 0;
  right: 0;
  width: 160rpx;
  height: 160rpx;
  background: radial-gradient(circle, rgba(255, 193, 7, 0.05) 0%, rgba(255, 255, 255, 0) 70%);
  z-index: 0;
}

.privacy-header {
  margin-bottom: 24rpx;
  position: relative;
}

.privacy-title {
  display: flex;
  align-items: center;
  font-size: 32rpx;
  font-weight: bold;
  color: #3d1f00;
  margin-bottom: 16rpx;
  position: relative;
  z-index: 1;
}

.privacy-icon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 48rpx;
  height: 48rpx;
  font-size: 32rpx;
  margin-right: 12rpx;
  background: linear-gradient(to bottom, rgba(255, 193, 7, 0.1), rgba(255, 152, 0, 0.1));
  border-radius: 50%;
  padding: 4rpx;
}

.privacy-line {
  height: 2rpx;
  background: linear-gradient(to right, rgba(243, 166, 64, 0.2), rgba(243, 166, 64, 0.05));
  margin-bottom: 20rpx;
}

.privacy-content {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  margin-bottom: 24rpx;
  position: relative;
  z-index: 1;
}

.privacy-item {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  color: #57534e;
  line-height: 1.5;
}

.privacy-bullet {
  width: 8rpx;
  height: 8rpx;
  background: linear-gradient(to bottom, #ffc107, #ff9800);
  border-radius: 50%;
  margin-right: 12rpx;
  margin-top: 16rpx;
  flex-shrink: 0;
}

.privacy-tip {
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
  color: #8c6d3f;
  background-color: rgba(255, 193, 7, 0.08);
  padding: 12rpx 20rpx;
  border-radius: 12rpx;
  margin-top: 16rpx;
  position: relative;
  z-index: 1;
}

.privacy-tip-icon {
  margin-right: 8rpx;
  font-size: 24rpx;
}

/* 文章区域 */
.article-section {
  margin-bottom: 40rpx;
}

.article-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.article-item {
  background-color: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  display: flex;
  box-shadow: 0 4rpx 15rpx rgba(0, 0, 0, 0.05);
}

.article-image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
  background-color: #f0e0c8;
}

.article-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.article-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #4a2811;
  margin-bottom: 10rpx;
}

.article-summary {
  font-size: 24rpx;
  color: #8c6d3f;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

.article-meta {
  display: flex;
  justify-content: space-between;
  font-size: 22rpx;
  color: #bfa77b;
}

/* 页脚 */
.footer {
  text-align: center;
  padding: 40rpx 0 20rpx;
  font-size: 24rpx;
  color: #8c6d3f;
  margin-top: 30rpx;
  opacity: 0.8;
  animation: fadeIn 1.5s ease-out;
}

/* 动画效果 */
@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeInDown {
  from {
    opacity: 0;
    transform: translateY(-30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
} 