.tips {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  color: rgb(128, 128, 128);
  font-size: 12px;
  height: 52px;
}
.tips::before,
.tips::after {
  content: '';
  display: inline-block;
  height: 1px;
  transform: scaleY(.5);
  flex-grow: 1;
  border-radius: 2px;
}
.tips::before {
  background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
}
.tips::after {
  background-image: linear-gradient(to left, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.5));
}

